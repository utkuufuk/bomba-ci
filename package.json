{
    "name": "github-ci",
    "version": "0.2.0",
    "description": "Simple CI server for GitHub projects",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && nohup ./server.sh node dist/app.js 2>&1 > server.log &",
        "stop": "./stop.sh",
        "dev": "./server.sh nodemon src/app.ts",
        "build": "tsc -p ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/utkuufuk/github-ci.git"
    },
    "author": "Utku <utkuufuk@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/utkuufuk/github-ci/issues"
    },
    "homepage": "https://github.com/utkuufuk/github-ci#readme",
    "dependencies": {
        "axios": "^0.19.0",
        "express": "^4.17.1",
        "js-yaml": "^3.13.1",
        "morgan": "^1.9.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/js-yaml": "^3.12.1",
        "@types/morgan": "^1.7.35",
        "@types/node": "^12.0.10",
        "nodemon": "^1.19.1",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    }
}
